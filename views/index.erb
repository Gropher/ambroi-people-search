<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Ambroi People Search</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap-theme.min.css">
    <link rel="stylesheet" href="/css/main.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js"></script>
    <script src="/js/js.cookie.js"></script>
    <script src="/js/spin.js"></script>
    <script src="/js/main.js"></script>
  </head>
  <body>
    <nav class="navbar navbar-inverse navbar-fixed-top">
      <div class="container">
        <div class="navbar-header">
          <a class="navbar-brand" href="#">Ambroi People Search</a>
        </div>
      </div>
    </nav>

    <div class="container">

      <div class="starter-template login">
        <p class="lead">
          Please login via Facebook
          <fb:login-button scope="public_profile,email" onlogin="checkLoginState();" auto_logout_link="true">
          </fb:login-button>
        </p>
      </div>

      <div class="content">
        <form class="form-horizontal" action="/search" method="POST" onsubmit="searchSubmit(); return false;" >
          <div class="form-group">
            <div class="col-sm-10">
              <input id="search-query" name="q" type="search" class="form-control" placeholder="environment remediation">
            </div>
            <button type="submit" class="btn btn-success col-sm-2 search-button">Search</button>
            <button type="submit" class="btn btn-warning col-sm-2 searching-button" disabled="disabled">
	       <span class="searching-button-inner">Searching...</span>
               <!--div class='spinner'> </div-->
	    </button>
          </div>
        </form>
        <div class='results-container'>
          <ul class='results list-group'></ul>
        </div>
      </div>

    </div><!-- /.container -->

  </body>
</html>
